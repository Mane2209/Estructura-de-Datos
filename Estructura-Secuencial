#include <iostream>
using namespace std;
float suma(float x, float y);
float resta(float x, float y);
float Multiplicacion(float x, float y);
float division(float x, float y);
void menu();
int main()
{
    float a,b; int c;
    menu();
    cin>>c;
    cout<<"Ingrese el primer valor:"; cin>>a;
    cout<<"Ingrese el segundo valor:"; cin>>b;
    if(c==1){
        cout<<"La suma es de: "<<suma(a,b);
    }
    else if(c==2){
        cout<<"La resta es de: "<<resta(a,b);
    }
    else if(c==3){
        cout<<"La multiplicacion es de: "<<Multiplicacion(a,b);
    }
    else if(c==4){
        cout<<"La division es de: "<<division(a,b);
    }
    return 0;
}
float suma(float x, float y){
    float z=x+y;
    return z;
}
float resta(float x, float y){
    float z=x-y;
    return z;
}
float Multiplicacion(float x, float y){
    float z=x*y;
    return z;
}
float division(float x, float y){
    float z=x/y;
    return z;
}
void menu(){
    cout<<"1. Suma."<<endl;
    cout<<"2.Resta"<<endl;
    cout<<"3.Multiplicacion."<<endl;
    cout<<"4.Division"<<endl;
    cout<<endl<<"Elija la opcion q desee."<<endl;
}
